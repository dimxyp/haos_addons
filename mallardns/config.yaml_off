---
version: 0.0.6
slug: mallardns
name: Marllard DNS
description: >-
  Smart Free Dynamic DNS service with Let's Encrypt and Firewall support
url: https://github.com/dimxyp/haos_addons/tree/main/mallardns
arch:
  - armhf
  - armv7
  - aarch64
  - amd64
  - i386
hassio_api: true
init: false
map:
  - ssl:rw
  - config:rw
options:
  domains:
    - null
  token: null
  aliases: []
  lets_encrypt:
    accept_terms: true
    algo: secp384r1
    certfile: fullchain.pem
    keyfile: privkey.pem
  fwh: null
  sshkey: /config/.ssh/id_rsa
  sshparameters: -o 'PubkeyAcceptedKeyTypes +ssh-rsa' -o StrictHostKeyChecking=no
  fwco: null
  fwcc: null
  seconds: 300
schema:
  domains:
    - match(.+\.duckdns\.org)
  token: str
  aliases:
    - alias: str
      domain: str
  lets_encrypt:
    accept_terms: bool
    algo: list(rsa|prime256v1|secp384r1)
    certfile: str
    keyfile: str
  seconds: int
  fwh: str
  sshkey: str
  sshparameters: str
  fwco: str
  fwcc: str
  ipv4: str?
  ipv6: str?
startup: services
